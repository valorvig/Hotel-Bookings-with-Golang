{{template "admin" .}}

{{define "css"}}
  <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" type="text/css">  
{{end}}

{{define "page-title"}}
  All Reservations
{{end}}

{{define "content"}}
  <div class="col-md-12">
    {{$res := index .Data "reservations"}}

    <table class="table table-striped table-hover" id="all-res">
      <thead>
        <tr>
          <th>ID</th>
          <th>Last Name</th>
          <th>Room</th>
          <th>Arrival</th>
          <th>Deaparture</th>
        </tr>
      </thead>
      <tbody>
        {{range $res}}
          <tr>
            <td>{{.ID}}</td>
            <td>
              <a href="/admin/reservations/all/{{.ID}}">
                {{.LastName}}
              </a>
            </td>
            <td>{{.Room.RoomName}}</td>
            <td>{{humanDate .StartDate}}</td> <!--add the function map "humanDate"-->
            <td>{{humanDate .EndDate}}</td>
          </tr>
        {{end}}
      </tbody>      
    </table>

  </div>
{{end}}

{{define "js"}}
  <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" type="text/javascript"></script>
  <script>
    // This document will try to run as soon as possible, but we want to defer it to run only after the document has laoded - jsut to be safe
    document.addEventListener("DOMContentLoaded", function() {
      const dataTable = new simpleDatatables.DataTable("#all-res", {
        select: 3, sort: "desc",
      })
    })
  </script>
{{end}}